    function cargaPopUpUdate (id, nombre, valor, annio , mes)
    {
        $("#id").val(id);
        $("#annio").val(annio);
        $("#mes").val(mes);
        $("#valor").val(valor);
        $("#nombre").val(nombre);
        $("#updateUser").modal();

    }

    function ActualizarDatos()
    {
        var id =  $("#id").val();
        var valor =  $("#valor").val();
        var nombre =  $("#nombre").val();
        var annio =  $("#annio").val();
        var mes =  $("#mes").val();

        //alert("cargar indo" + id + "////" + valor + "////" + nombre);

        var informacion = [];
            const costo = {
                        vid : id,
                        vvalor : valor,
                        vnombre : nombre,
                        vannio : annio,
                        vmes : mes
                    };
        informacion.push(costo);

         $.ajax({
                            type: 'post',
                            url: '/costos/ajax',
                            contentType: 'application/json',
                            data: JSON.stringify(informacion),
                            
                        });

            alert("User actualizado");
            $('#updateUser').modal('hide');
    

    }
</script>

{{#if verToask }}
<!--INFORMACIÓN-->
<script>
    
    if ("{{verToask.tipo}}" == "Editar") {
        toastr.warning('{{verToask.body}}', '{{verToask.titulo}}', {
            "progressBar": true
        });
    }
    else if ("{{verToask.tipo}}" == "Crear") {
        toastr.success('{{verToask.body}}', '{{verToask.titulo}}', {
            "progressBar": true
        });
    }
    else if ("{{verToask.tipo}}" == "Eliminar") {
        toastr.error('{{verToask.body}}', '{{verToask.titulo}}', {
            "progressBar": true
        });
    }

</script>
{{/if}}
