<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Facturas<small>revision de las facturas</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left"  action="/facturacion/facturas" method="POST">
             <div class="item form-group">
                
				<label class="col-form-label col-md-3 col-sm-3 label-align" for="Estado"> Estado</label>
				<div class="col-md-4 col-sm-4 ">
					<select class="form-control" name="estado" id="estado">                        
                        {{#each estados}}
                            <option value="{{id}}">{{descripcion}}</option>
                        {{/each}} 
	    	        </select>
				</div>
                <div class="col-md-1 col-sm-1 ">
                    <button  type="submit" class="btn btn-success btn-block">
                           Filtrar
                    </button>
                </div>
           
    		</div>
                 </form>


            <table class="table table-hover" id="tablafacturacion" name="tablafacturacion">
                <thead>
                    <tr>
                        <th>Fecha Solicitud</th>
                        <th>Nº Proyecto</th>
                        <th>Proyecto</th>
                        <th>Nº Presupuesto</th>
                        <th>Unidad</th>
                        <th>Monto</th>
                        <th>% Ppto.</th>
                        <th>Solicitante</th>
                        <th>Inicio Cobro</th>
                        <th>Nº Factura</th>
                        <th>Roc Asociada</th>
                        <th>Estado</th>
                        <th>Tipo Cobro</th>
                        <th></th>
                    </tr>
                </thead>
                    <tbody>
                        {{#each facturacion}}
                            <tr > 
                                <td>{{fechaSolicitante}}</td>
                                <td>{{year}}-{{code}}</td>
                                <td>{{nomPro}}</td>
                                <td>{{num_ppto}}</td>
                                <td>{{simbolo}}</td>
                                <td>{{monto_a_facturar}}</td>
                                <td>{{porc_ppto}}</td>
                                <td>{{NombreCompleto}}</td>
                                <td>{{fecha_cobro}}</td>
                                <td>{{num_factura}}</td>
                                <td>{{roc}}</td>
                                <td>{{estadoDes}}</td>
                                <td>{{tipoCobroDes}}</td>
                                <td>mod</td>
                            </tr>
                        {{/each}} 
                    </tbody>
            </table>

        </div>
    </div>
</div>

