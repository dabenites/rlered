<div class="item form-group">
    <label class="col-form-label col-md-4 col-sm-4 label-align" for="titulo">Presupuesto</label>
            <div class="col-md-5">
					<select class="form-control" name="presupuesto" id="presupuesto" onchange="cargaOpcionesPresupuesto(this.value);">
                                    <option value="0">N/A</option>   
                                    {{#each presupuestos}}
                                        {{#if (if_equal id_presupuesto ../contrato_metodologia.id_presupuesto) }}
                                            <option value="{{id_presupuesto}}" selected>{{codigo}}</option>   
                                         {{else}}
                                            <option value="{{id_presupuesto}}">{{codigo}}</option>   
                                         {{/if}}
                                    {{/each}}     
                    </select>
            </div>
</div>

