<div class="item form-group">
    <label class="col-form-label col-md-2 label-align" for="titulo"> <b>Moneda</b></label>
    <label class="col-form-label col-md-1" for="titulo" id="tipoMonedaPro">{{proyectos.simbolo}}</label>
    <label class="col-form-label col-md-2 label-align" for="titulo"> <b>Valor m<sup>2</sup></b></label>
    <label class="col-form-label col-md-2" for="titulo" id="valorm2pro">{{proyectos.valor_metro_cuadrado}}</label>
    <label class="col-form-label col-md-3 label-align" for="titulo"><b>Valor Proyecto</b></label>
    <label class="col-form-label col-md-2" for="titulo" id="valorpro">{{proyectos.valor_proyecto}}</label>
</div>

<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Presupuesto</label>
            <div class="col-md-5">
					<select class="form-control" name="presupuesto" id="presupuesto" onchange="cargaOpcionesPresupuesto(this.value);">
                                <option value="0" selected>N/A</option>   
                                    {{#each presupuestos}}
                                        <option value="{{id_presupuesto}}">{{codigo}}</option>   
                                    {{/each}}     
                    </select>
            </div>
</div>

<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Edificio / Torre</label>
            <div class="col-md-5">
					<select class="form-control" name="edificiotorre" id="edificiotorre">
                                <option value="0">N/A</option>   
                                    {{#each substructura}}
                                        <option value="{{id}}">{{descripcion}}</option>   
                                    {{/each}}     
                    </select>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="chkAll" name="chkAll" onclick="cargarTodosSegunProyecto();">
                <label class="form-check-label" for="defaultCheck1"> Agregar Todos </label>
                </div>
            </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Hito Pago</label>
            <div class="col-md-5">
					<select class="form-control" name="hito" id="hito">
                                <option value="0">Seleccione</option>   
                                    {{#each hitos}}
                                        <option value="{{id}}">{{descripcion}}</option>   
                                    {{/each}}     
                    </select>
            </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Porcentaje </label>
            <div class="col-md-5">
					<input type="number" id="porcentaje" name="porcentaje" required="required" class="form-control" onchange="cargaMonto(this.value);">
            </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Monto </label>
            <div class="col-md-5">
					<input type="number" id="monto" name="monto" required="required" class="form-control">
            </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Moneda </label>
            <div class="col-md-5">
				<select class="form-control" name="moneda" id="moneda">
                                <option value="0">Seleccione</option>   
                                    {{#each monedas}}
                                        <option value="{{id_moneda}}">{{descripcion}}</option>   
                                    {{/each}}     
                    </select>
            </div>
</div>
<div class="item form-group">
    <label class="col-form-label col-md-5 col-sm-5 label-align" for="titulo">Observaci√≥n </label>
            <div class="col-md-5">
                <textarea id="observacion" name="observacion" class="form-control" rows="3" ></textarea>
            </div>
</div>
<div class="item form-group">
    <div class="col-md-4"></div>
        <div class="col-md-4">
            <button type="button" class="btn btn-success" onclick="cargarFormMetodologia();" >Agregar</button>
        </div>
</div>