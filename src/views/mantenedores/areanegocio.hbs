    <div class="x_panel">
        <div class="x_title">
            {{#if areaNegocio }}
            <h2>Actualizar Area Negocio <small> # ingresar nombre area negocio</small></h2>
            {{else}}
            <h2>Registrar Area Neogcio <!--<small>Se podra seleccionar la categoria al momento de ingresar un usuario</small>-->
            </h2>
            {{/if}}

            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <!-- start form for validation -->
            {{#if categoria }}
                <form id="demo-form" data-parsley-validate action="/mantenedores/editAreaNeogcio" method="POST">
            {{else}}
                <form id="demo-form" data-parsley-validate action="/mantenedores/eddAreaNeogcio" method="POST">
            {{/if}}

                    {{#if areaNegocio }}
                    <label for="ID Categoria">Id Categoria :</label>
                    <input type="text" id="id" class="form-control" value="{{categoria.id}}" name="id" readonly />
                    {{/if}}
                    <label for="Nombre Categoria">Nombre Area Negocio :</label>
                    <input type="text" id="name" class="form-control" value="{{categoria.categoria}}" name="name" required />
                    <br />

                     <div class="form-group row">
                                    <div class="col-md-5 col-sm-5 ">

                                    </div>
                                    <div class="col-md-4 col-sm-4 ">
                                        {{#if areaNegocio }}
                                            <button type="submit" class="btn btn-warning btn-block">Actualizar<button>
                                        {{else}}
                                            <button type="submit" class="btn btn-warning btn-block">Ingresar</button>
                                        {{/if}}
                                    </div>
                            </div>
                </form>
                <!-- end form for validations -->

        </div>
    </div>
</div>

