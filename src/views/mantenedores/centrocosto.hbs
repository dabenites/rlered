<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">




<div class="col-md-6 col-sm-6  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Centro Costos<small>Los centros de costos es una agrupacion para las categorias</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if centro }}
                    {{#each centrosCostos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{centroCosto}}</td>
                        <td style="padding: .15rem;">
                            <a style="padding: .25rem;" type="button" class="btn btn-danger btn-xs"
                                href="../../centrocosto/delete/{{id}}">
                                Borrar
                            </a>
                            <a style="padding: .25rem;" type="button" class="btn btn-secondary btn-xs"
                                href="../../centrocosto/edit/{{id}}">
                                Editar
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    {{else}}
                    {{#each centrosCostos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{centroCosto}}</td>
                        <td style="padding: .15rem;">
                            <a style="padding: .25rem;" type="button" class="btn btn-danger btn-xs"
                                href="centrocosto/delete/{{id}}">
                                Borrar
                            </a>
                            <a style="padding: .25rem;" type="button" class="btn btn-secondary btn-xs"
                                href="centrocosto/edit/{{id}}">
                                Editar
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-6 ">
    <div class="x_panel">
        <div class="x_title">
            {{#if centro }}
            <h2>Actualizar Centro Costo <small>{{centro.centroCosto}}</small></h2>
            {{else}}
            <h2>Registrar Centro Costo <small>Se podra seleccionar el centro de costo en el ingreso de una
                    categoria</small></h2>
            {{/if}}

            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <!-- start form for validation -->
            {{#if centro }}
            <form id="demo-form" data-parsley-validate action="/mantenedores/editCentroCosto" method="POST">
                {{else}}
                <form id="demo-form" data-parsley-validate action="/mantenedores/addCentroCosto" method="POST">
                    {{/if}}

                    {{#if centro }}
                    <label for="ID Centro">Id Centro Costo* :</label>
                    <input type="text" id="id" class="form-control" value="{{centro.id}}" name="id" readonly />
                    {{/if}}
                    <label for="Nombre Centro Costo">Nombre Centro Costo * :</label>
                    <input type="text" id="name" class="form-control" value="{{centro.centroCosto}}" name="name"
                        required />

                    <br />
                    {{#if centro }}
                    <button type="submit" class="btn btn-warning btn-block">
                        Actualizar
                    </button>
                    {{else}}
                    <button type="submit" onvolumechange="" class="btn btn-success btn-block">
                        Ingresar
                    </button>
                    {{/if}}


                </form>
                <!-- end form for validations -->

        </div>
    </div>
</div>

