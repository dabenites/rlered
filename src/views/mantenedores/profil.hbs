                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Nombre</b></label>
                    <label for="staticEmail" class="col-sm-4 col-form-label">{{usuario.Nombre}}</label>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Login</b></label>
                    <label for="staticEmail" class="col-sm-4 col-form-label">{{usuario.login}}</label>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Teléfono</b></label>
                    <label for="staticEmail" class="col-sm-4 col-form-label">{{usuario.Telefono}}</label>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Categoría</b></label>
                    <label for="staticEmail" class="col-sm-4 col-form-label">{{usuario.categoria}}</label>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Título</b></label>
                    <label for="staticEmail" class="col-sm-4 col-form-label">{{usuario.titulo}}</label>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                    <label for="staticEmail" class="col-sm-2 col-form-label"><b>Password</b></label>
                   
                    <div class="col-sm-4">
                        <div class="col-auto">
                                <div class="input-group mb-2">
                                    <input type="password" class="form-control" id="contrasena" >
                                    <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-eye" id="togglePassword">&nbsp;</i></div>
                                    </div>
                                </div>
                        </div>
                         <button type="button" class="btn btn-warning">Actualizar Contraseña</button>
                    </div>
                </div>
                <!-- 
                    <div class="form-group row">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-warning">Actualizar Contraseña</button>
                        </div>
                    </div>
                -->
            </div>
        </div>
    </div>
    <div class="col-md-6 ">

    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
