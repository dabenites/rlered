    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
      function revisarAction(estado)
        {
            switch(estado)
            {
                case 0:
                $("#estado").val(0);
                break;
                case 1:
                $("#estado").val(1);
                break;
            }
            document.getElementById("updateCosto").submit();
        }
    </script>

