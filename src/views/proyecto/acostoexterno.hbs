                                    </tr>
                                </thead>
                                    <tbody>
                                            {{#each costosAnteriores}}
                                                <tr> 
                                                    <td>{{NombreCompleto}}</td>
                                                    <td>{{fechaIngreso}}</td>
                                                    <td>{{descripcion}}</td>
                                                    <td>{{costo}}</td>
                                                    <td>{{desTra}}</td>
                                                </tr>
                                            {{/each}} 
                                    </tbody>
                            </table>
                      </div>
                    </div>
        </div>  
    </div>
</div>
 {{/if}}

