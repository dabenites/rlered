<div class="col-md-7 ">
    <div class="x_panel">
		<div class="x_title">
               <h2>Revisar Costo Externo<small>{{costoExterno.nomPro}}</small></h2> 
		    <div class="clearfix"></div>
		</div>
        <div class="x_content">
            <ul class="nav nav-tabs justify-content-end bar_tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="revisar-tab" data-toggle="tab" href="#revisar" role="tab" aria-controls="revisar" aria-selected="true">Revisar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile1" role="tab" aria-controls="profile" aria-selected="false">Anteriores</a>
                </li>
            </ul>
                    <div class="tab-content" id="myTabContent">
                      <div class="tab-pane fade show active" id="revisar" role="tabpanel" aria-labelledby="home-tab">
                        <form id="updateCosto" name="updateCosto" data-parsley-validate action="/costos/updateCostoExterno" method="POST">
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Proovedor <span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="proveedor" class="form-control" value="{{costoExterno.nomProveedor}}" name="proveedor" readonly />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="Centro Costo">Centro Costo <span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="centrocosto" class="form-control" value="{{costoExterno.centroCosto}}" name="centrocosto" readonly />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="Tipo Moneda">Tipo Moneda<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="tipomoneda" class="form-control" value="{{costoExterno.id_tipo_moneda}}" name="tipomoneda" readonly />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="Costo">Costo<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="costo" class="form-control" value="{{costoExterno.costo}}" name="costo" readonly />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="Num HH">Nº HH aprox<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="numhh" class="form-control" value="{{costoExterno.numHH}}" name="numhh" readonly />
                                </div>
                            </div>
                        <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="Num OC">N° Orden Compra<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="numoc" class="form-control" value="{{costoExterno.numOC}}" name="numoc" readonly />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="descripcion">Descripción<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                        <textarea class="form-control" rows="3" name="descripcion" id="descripcion" readonly>{{costoExterno.desTra}}</textarea>         
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="descripcion">Observacion<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                        <textarea class="form-control" rows="3" name="Observacion" id="Observacion" ></textarea>         
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-4 col-sm-4 label-align" for="descripcion"></label>
                                <input type="hidden" id="estado" class="form-control" value="" name="estado" readonly />
                                <input type="hidden" id="id_costo_externo" class="form-control" value="{{costoExterno.idCostoExterno}}" name="id_costo_externo" readonly />
                                <button type="button" onclick="revisarAction(0);" class="btn btn-danger" type="button">Rechazar</button>
                                <button type="button" onclick="revisarAction(1);"class="btn btn-success" type="reset">Aceptar</button>
                            </div>
                        </form>
                      </div>
                      <div class="tab-pane fade" id="profile1" role="tabpanel" aria-labelledby="profile-tab">
                        <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Solicitante</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Estado</th>
                                        <th>Costo</th>
