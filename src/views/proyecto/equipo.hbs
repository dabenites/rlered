                                        </tr>
                                        {{/each}}
                                </tbody>
                            </table>
                       </div>
                  </div>
                  <div class="col-md-1 col-sm-1 ">

                  </div>
                  <div class="col-md-5 col-sm-5 ">
                        <div class="x_panel">
                           <div class="x_title">
                                <h2>
                                    <small>Agregar Colaboradores al Equipo</small>
                                </h2>
                                <div class="clearfix"></div>
                            </div>
                             <table class="table table-hover" id="tablaEquipo">
                                <thead>
                                    <tr>
                                        <th>Colaborador</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each colaboradores}}
                                        <tr>
                                            <td>{{Nombre}}</td>
                                            <td>
                                                <a style="padding: .25rem;" type="button" class="btn btn-success btn-xs" 
                                                href="/proyecto/equipo/add/{{idUsuario}}/{{../proyecto.id}}">
                                                Agregar al equipo
                                                </a>
                                            </td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                  </div>
              </div>
        </div>
    </div>
