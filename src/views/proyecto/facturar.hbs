function cambioEstado()
{
    // cambiar el estado de los label 
    //alert($( "#esroc" ).val());
    if ($( "#esroc" ).val() === "1")
    {
        $("#rroc").attr("style", "visibility: visibility");
        $("#roc").attr("style", "visibility: visibility");

    }
    else
    {
        $("#rroc").attr("style", "visibility: hidden");
        $("#roc").attr("style", "visibility: hidden");
    }

}

</script>



