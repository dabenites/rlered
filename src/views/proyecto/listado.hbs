<!--LISTAR-->
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Proyecto<small></small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <td style="text-align: right;width:220px">
                   <a style="padding: .50rem;" type="button" class="btn btn-info" href="/proyecto/addPro">Crear Proyectos</a> 
                </td>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-hover" id="tablaProyectos" name="tablaProyectos">
                <thead>
                    <tr>
                        <th>Proyecto</th>
                        <th>Cliente</th>
                        <th>Director</th>
                        <th>Jefe</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each proyectos}}
                    <tr>
                        <td>{{year}}-{{code}} : {{nombre}}</td>
                        <td>{{nomCli}}</td>
                        <td>{{nomDir}}</td>
                        <td>{{nomJefe}}</td>
                        <td>

                            <div class="btn-group" role="group" aria-label="Basic example">
                                
                                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Ver">
                                    <a href="ver/{{id}}" style="color: #fff;"><i class="fa fa-eye"></i></a>
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Editar">
                                    <a href="editar/{{id}}" style="color: #fff;"><i class="fa fa-edit"></i></a>
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Facturar">
                                    <a href="facturar/{{id}}" style="color: #fff;"><i class="fa fa-usd" aria-hidden="true"></i></a>
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Equipo">
                                    <a href="equipo/{{id}}" style="color: #fff;"><i class="fa fa-users"></i></a>
                                </button>
                            </div>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

