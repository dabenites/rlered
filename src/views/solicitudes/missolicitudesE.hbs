<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<div class="col-md-6 col-sm-6  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Mis Solicitudes
                <!--<small>Los centros de costos es una agrupacion para las categorias</small>-->
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="vacper-tab" data-toggle="tab" href="#vacper" role="tab" aria-controls="vacper" aria-selected="true">Vacaciones / Permiso</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="hextra-tab" data-toggle="tab" href="#hextra" role="tab" aria-controls="hextra" aria-selected="false">Horas Extras</a>
                </li>
           </ul>
           <div class="tab-content">
               <div class="tab-pane" id="vacper" role="tabpanel" aria-labelledby="vacper-tab">
                    <div class="form-group row">&nbsp;</div>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Aprobador</th>
                                <th>Fecha solicitud</th>
                                <th>Estado</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each solicitudes}}
                                <tr>
                                    <td>{{descripcion}}</td>
                                    <td>{{Nombre}}</td>
                                    <td>{{fecha}}</td>
                                    <td>{{estado}}</td>
                                    <td>
                                            <a  type="button" class="btn btn-secondary btn-xs"
                                                href="../../solicitudes/missolicitudes/{{id}}">
                                                Revisar
                                            </a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
               </div>
               <div class="tab-pane active" id="hextra" role="tabpanel" aria-labelledby="hextra-tab">
                    <div class="form-group row">&nbsp;</div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Asignadas A:</th>
                                    <th>Proyecto</th>
                                    <th>Estado</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each horasextrasHistorial}}
                                    <tr>
                                        <td>{{Nombre}}</td>
                                        <td>{{nomPro}}</td>
                                        <td>{{descripcion}}</td>
                                        <td>
                                                <a  type="button" class="btn btn-secondary btn-xs"
                                                    href="../../solicitudes/missolicitudesE/{{id}}">
                                                    Revisar
                                                </a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
               </div>
           </div>
        </div>
    </div>
</div>
<div class="col-md-6 ">
    <div class="x_panel">
            <div class="x_title">
                    <h2>Revisión de solicitud</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="item form-group">
					<label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Tipo </b></label>
					<label class="col-form-label col-md-2 col-sm-2" for="Tipo">Hora Extra </label>

                    <label class="col-form-label col-md-2 col-sm-2 label-align" for="Estado"> <b> Estado </b></label>
                    <label class="col-form-label col-md-3 col-sm-3" for="Tipo">{{solicitud.descripcion}} </label>
			    </div>
                 <div class="item form-group">
                     <label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Proyecto </b></label>
                      <label class="col-form-label col-md-6 col-sm-6" for="Tipo">{{solicitud.nomPro}} </label>
                 </div>
                  <div class="item form-group">
                        <label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Asignado A: </b></label>
					    <label class="col-form-label col-md-2 col-sm-2" for="Tipo">{{solicitud.colaborador}} </label>

                        <label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Nº HH </b></label>
					    <label class="col-form-label col-md-2 col-sm-2" for="Tipo">{{solicitud.numhh}} </label>

                        <label class="col-form-label col-md-2 col-sm-2 label-align" for="Estado"> <b> Fecha Solicitud </b></label>
                        <label class="col-form-label col-md-3 col-sm-3" for="Tipo">{{solicitud.fecha}} </label>
                  </div>
                 <div class="item form-group">
                     <label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Comentario Ingreso </b></label>
                      <label class="col-form-label col-md-10 col-sm-10" for="Tipo">{{solicitud.comentario}} </label>
                 </div>
                 <div class="item form-group">
                      <label class="col-form-label col-md-2 col-sm-2 label-align" for="Tipo"> <b> Comentario Solicitud </b></label>
                      <label class="col-form-label col-md-10 col-sm-10" for="Tipo">{{solicitud.comentarioSolicitud}} </label>
                 </div>
            </div>
    </div>
</div>

