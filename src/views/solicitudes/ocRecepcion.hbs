<script>
    function Recepcionar(estado)
    {
         let comentario  = $("#comentario").val();
         let id          = $("#id").val();

         let informacion = { estado, comentario ,id};
         
         $.ajax({
              type: 'post',
              url: '/solicitudes/ocCambioEstadoRecepcion',
              data: informacion,
              dataType: 'text'
               })
              .done(function (data) {
                if (data)
                {
                    $(location).attr('href','/solicitudes/rordencompra?a=1');
                }
              });
    }
</script>
