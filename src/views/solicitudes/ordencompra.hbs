                                            // $("#idTarea").html(resultado);
                                            //alert("Buscar informacion");
                                            $("#razonsocial").val(resultado.razonsocial);
                                            $("#rut").val(resultado.rut);
                                        } 
                                });
        }
        else
        {
            $("#razonsocial").val("");
            $("#rut").val("");
        }
    }

    function cargaTipoProveedor(valor)
