<script>
    function cargaEmisorOC(valor)
    {
        if (valor !== "")
        {
                $.ajax({
                                    async: false,
                                    type : 'POST', 
                                    url	 : "/solicitudes/buscaEmpresa", 
                                    data : "id="+valor,
                                    success : function (resultado) 
