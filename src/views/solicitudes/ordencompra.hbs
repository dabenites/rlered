                case 3:
                case "3":
                    $("#rnombrepro").html("<b>Razon Social</b>");
                    $("#razonsocialProv").css("visibility", "hidden");
                    $("#razonsocialProv").hide();
                break;
            }

            // buscar informaci√≥n para cargar el listado. 
             $.ajax({
