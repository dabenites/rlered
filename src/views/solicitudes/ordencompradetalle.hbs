<script>
    function EliminarRegistro (id)
    {
        // cargar la informacion del detalle. 
        let informacion = {  id  };
        

        $.ajax({
              type: 'post',
              url: '/solicitudes/ordecompradetalleEliminar',
              data: informacion,
              dataType: 'text'
               })
              .done(function (data) {
                $('#tablaInformacion').html(data);
              });
    
    }
</script>