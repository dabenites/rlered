<!--Funcionalidad y uso de fullcalendar-->
<script>

  document.addEventListener('DOMContentLoaded', function () {
    var calendarEl = document.getElementById('calendar');

    var calendar = new FullCalendar.Calendar(calendarEl, {
      headerToolbar: {
        left: 'prev,next',
        center: 'title',
        right: 'Miboton'
      },
      initialDate: new Date(),
      hiddenDays: [0, 6],
      contentHeight: 650,
      height: 650,
      customButtons: {
        Miboton: {
          text: "Ingresar Solicitud",
          click: function () {

            // ir a la base de datos preguntar lacantidad de dias que entrega 
            $.ajax({
              type: 'post',
              url: '/solicitudes/getDias',
              data: Object,
              dataType: 'text'
            })
              .done(function (data) {
                //console.log(data);
                $('#txtfecha').val(data);
              });
            $('#exampleModal').modal('toggle'); //Me muestra el formulario si esta oculto
          }
        }
      },
      events: '/solicitudes/eventos',
      //events:[      {        start: '2020-12-15',        display: 'background',        overlap: false      }    ],
      dateClick: function (info) {

        // var allEvents = getEvents();


        // console.log(jsEvent);
        var diaSolicitado = calendar.formatDate(info.dateStr, {
          year: 'numeric',
          month: 'numeric',
          day: 'numeric'
        });

        var allEvents = calendar.getEvents();
        var exists = false;
        $.each(allEvents, function (index, value) {
          //  console.log(moment(value.start).format("DD-MM-YYYY HH:mm"));
          //  calendar.formatDate();
          //  console.log(formatDate(value.start, 'MM-dd-yyyy'));

          var diaEvento = calendar.formatDate(value.start, {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric'
          });

          if (diaSolicitado == diaEvento)
            exists = true;

        });

        if (!exists) {
          calendar.addEvent({ date: info.dateStr });

          var informacion = [];
          const fecha = {
            dia: info.dateStr
          };
          informacion.push(fecha);
          $.ajax({
            type: 'post',
            url: '/solicitudes/ajaxAdd',
            contentType: 'application/json',
            data: JSON.stringify(informacion),
          });
        }

      },
    });
    calendar.setOption('locale', 'es');
    calendar.render();
  });

</script>



